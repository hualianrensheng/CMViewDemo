<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:src="@drawable/home_menu_bg"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:text="背对背拥抱"
            android:textSize="28sp"
            android:textColor="#ff00ff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/qq_setting_svip"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="了解会员特权"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/qq_setting_qianbao"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="QQ钱包"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/qq_setting_zhuangban"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="个性装扮"
            android:textColor="#99000000"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/qq_setting_shoucang"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="我的收藏"
            android:textColor="#99000000"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/qq_setting_xiangce"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="我的相册"
            android:textColor="#99000000"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
